{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "Node16"
  },
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
